<!doctype html>
<html lang="en" xmlns="http://www.w3.org/1999/xhtml" xmlns:th="http://www.thymeleaf.org"><head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Employee Management System</title>
    <link rel="stylesheet" href="employee.css">
</head>
<body>
    <div class="container my-2">
        <h1>Employees' Database</h1>
        <table class = "table table-striped table-responsive-md">
            <thead>
            <tr>
                <th>Employee Id</th>
                <th>Employee First Name</th>
                <th>Employee Last Name</th>
                <th>Employee Date-Of-Birth</th>
                <th>Employee Email</th>
                <th>Employee Phone Number</th>
                <th>Employee Password</th>
                <th>Employee Gender</th>
                <th>Employee Role</th>
                <th>Actions</th>
            </tr>
            </thead>
            <tbody>
            <tr th:each="employee : ${listEmployees}">
                <td th:text="${employee.employeeId}"></td>
                <td th:text="${employee.firstName}"></td>
                <td th:text="${employee.lastName}"></td>
                <td th:text="${employee.dob}"></td>
                <td th:text="${employee.email}"></td>
                <td th:text="${employee.phoneNumber}"></td>
                <td th:text="${employee.password}"></td>
                <td th:text="${employee.gender}"></td>
                <td th:text="${employee.role}"></td>
                <td> <a th:href="@{/showFormForUpdate/{id}(id=${employee.id})}" class="btn btn-update">Update</a> <a th:href="@{/deleteEmployee/{id}(id=${employee.id})}" class="btn btn-remove">Remove</a></td>
            </tr>
            </tbody>
        </table>
    </div>
</body>
</html>